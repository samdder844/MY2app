<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b9251d"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".tela2"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="349dp"
        android:layout_height="260dp"
        android:padding="5dp"
        app:srcCompat="@drawable/logodiligencia"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="7dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="297dp"
        android:layout_height="61dp"
        android:drawableLeft="@android:drawable/ic_dialog_email"

        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="309dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="297dp"
        android:layout_height="61dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="382dp" />

    <Button
        android:id="@+id/angry_btn"

        android:layout_width="238dp"
        android:layout_height="45dp"

        android:background="@drawable/buttonshape2"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="491dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceu sua senha?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="217dp"
        tools:layout_editor_absoluteY="457dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ou acesse com:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="160dp"
        tools:layout_editor_absoluteY="552dp" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não é cadastrado?"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="651dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastre-se!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="651dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#84120b"
        app:srcCompat="@drawable/facebookicon"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="588dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#84120b"
        app:srcCompat="@drawable/googleicon"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="588dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
